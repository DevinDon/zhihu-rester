  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Entrypoint",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "debug"
      ],
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Current TS File",
      "args": [
        "${relativeFile}"
      ],
      "runtimeArgs": [
        "--require=ts-node/register",
      ],
      "sourceMaps": true,
      "protocol": "inspector",
      "outputCapture": "std",
      "stopOnEntry": false,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Current JS File",
      "args": [
        "${relativeFile}"
      ],
      "sourceMaps": true,
      "protocol": "inspector",
      "outputCapture": "std",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test: Jasmine",
      "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine.js",
      "args": [
        "--require=ts-node/register",
        "--config=src/test/jasmine.json",
        "--reporter=jasmine-console-reporter"
      ],
      "sourceMaps": true,
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std",
    }
  ]
}
